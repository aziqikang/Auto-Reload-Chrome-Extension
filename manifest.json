{
    "name": "Reloader",
    "description": "timed auto-reloader for chrome browsers",
    "version": "1.0",
    "manifest_version": 3,

    "action": {
        "default_icon": "Icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs"
    ]
}